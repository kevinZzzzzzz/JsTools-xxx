{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES2015",
    "target": "es5",
    "lib": [
      "ES2015",
      "ESNext",
      "dom",
      "es5",
      "es6",
    ],
    "allowJs": true,
    "declaration": true, 
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "moduleResolution":"node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
  }
}
